<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity"
    android:background="#E8F3FF">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E8F3FF"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="180dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/baseline_man_24"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@string/account"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginTop="100dp"
                    android:clickable="false"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="welcome"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="80dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="100dp"
                    android:text="user"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/buttonProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="40dp"
                    android:background="#00FFFFFF"

                    android:text="Edit"
                    android:textColor="@color/black" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="404dp"
                android:layout_height="131dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="40dp"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="280dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="0dp"
                    android:background="#00FFFFFF"
                    android:baselineAlignBottom="true"
                    android:contentDescription="@string/mic"
                    android:onClick="voiceOpen"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/_314955"
                    tools:layout_editor_absoluteX="296dp"
                    tools:layout_editor_absoluteY="196dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="0dp"
                    android:background="#00FFFFFF"
                    android:baselineAlignBottom="true"
                    android:contentDescription="@string/message"
                    android:onClick="msgOpen"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/download"
                    tools:layout_editor_absoluteX="182dp"
                    tools:layout_editor_absoluteY="196dp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="0dp"
                    android:background="#00FFFFFF"
                    android:baselineAlignBottom="true"
                    android:contentDescription="@string/video"
                    android:onClick="videoOpen"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/images"
                    tools:ignore="ImageContrastCheck"
                    tools:layout_editor_absoluteX="62dp"
                    tools:layout_editor_absoluteY="196dp" />

                <TextView
                    android:id="@+id/imageView2"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:onClick="videoOpen"
                    android:text="@string/videoR"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/imageView3"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:onClick="msgOpen"
                    android:text="@string/chatR"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/imageView4"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:onClick="voiceOpen"
                    android:text="@string/vcR"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>


    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="380dp"
        android:layout_marginRight="380dp"
        android:layout_marginBottom="88dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        android:scaleType="matrix"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="381dp"
        android:layout_marginRight="381dp"
        android:layout_marginBottom="140dp"
        android:background="#00FFFFFF"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/git"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>