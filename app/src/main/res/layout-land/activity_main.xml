<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity"
    android:background="#E8F3FF">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint111"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/voiceCall"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="15dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/mic"
                android:onClick="voiceOpen"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/msgCalltext"
                app:layout_constraintStart_toEndOf="@+id/msgCall"
                app:srcCompat="@drawable/_314955" />

            <ImageButton
                android:id="@+id/msgCall"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="15dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/message"
                android:onClick="msgOpen"

                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/voiceCalltext"
                app:layout_constraintStart_toEndOf="@+id/videoCall"
                app:srcCompat="@drawable/download" />

            <ImageButton
                android:id="@+id/videoCall"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="160dp"
                android:layout_marginBottom="15dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/video"
                android:onClick="videoOpen"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/videoCallText"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/images" />

            <TextView
                android:id="@+id/videoCallText"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginBottom="70dp"
                android:onClick="videoOpen"
                android:text="@string/videoR"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/msgCalltext"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_marginStart="40dp"
                android:layout_marginBottom="70dp"
                android:onClick="msgOpen"
                android:text="@string/chatR"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/voiceCalltext" />

            <TextView
                android:id="@+id/voiceCalltext"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:onClick="voiceOpen"
                android:text="@string/vcR"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/videoCallText" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="176dp"
                android:background="#00FFFFFF"
                android:scaleType="matrix"
                android:src="@drawable/instagram"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/git"
                app:layout_constraintBottom_toTopOf="@+id/imageButton6"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/account"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_man_24"
                app:layout_constraintBottom_toTopOf="@+id/name1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="43dp"
                android:layout_height="24dp"
                android:layout_marginBottom="244dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="user"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/buttonProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#00FFFFFF"
                android:text="Edit"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>